<div class="container-fluid register">
    <div class="row">
        <div class="col-12">
            <div class="card my-5" style="min-height: 80vh;">
                <h3 class="text-center">regístrate</h3>
                <form class="my-1" action="/registro" method="POST">
                    <div class="form-row align-items-center justify-content-around">
                        <div class="col-10 col-md-4 form-group mb-4">
                            <label for="name">Nombre:</label>
                            <input type="text" class="form-control py-2" name="nomC" id="nomC" placeholder="INGRESE SU NOMBRE">
                        </div>

                        <div class="offset-md-1 col-10 col-md-4 form-group mb-4">
                            <label for="last_one_name">Apellido Paterno:</label>
                            <input type="text" class="form-control py-2" name="apeC" id="apeC" placeholder="INGRESE SU APELLIDO PATERNO">
                        </div>

                        <div class="col-10 col-md-4 form-group mb-4">
                            <label for="last_two_name">Apellido Materno:</label>
                            <input type="text" class="form-control py-2" name="apeC2" id="apeC2" placeholder="INGRESE SU APELLIDO MATERNO">
                        </div>

                        <div class="offset-md-1 col-10 col-md-4 form-group mb-4">
                            <label for="dni">DNI:</label>
                            <input type="number" class="form-control py-2" name="dniC" id="dniC" placeholder="INGRESE SU DNI">
                        </div>

                        <div class="col-10 col-md-4 form-group mb-4">
                            <label for="phone">Celular:</label>
                            <input type="number" class="form-control py-2" name="telfC" id="telfC" placeholder="INGRESE SU CELULAR">
                        </div>

                        <div class="offset-md-1 col-10 col-md-4 form-group mb-4">
                            <label for="email">Correo Electrónico:</label>
                            <input type="email" class="form-control py-2" name="mailC" id="mailC" placeholder="INGRESE SU CORREO ELECTRÓNICO">
                        </div>

                        <div class="col-10 col-md-4 form-group mb-4">
                            <label for="password">Contraseña:</label>
                            <input type="password" class="form-control py-2" name="pass" id="pass" placeholder="INGRESE SU CONTRASEÑA">
                        </div>

                        <div class="offset-md-1 col-10 col-md-4 form-group mb-4">
                            <label for="confirm_password">Confirmar Contraseña:</label>
                            <input type="password" class="form-control py-2" name="confirm_password" id="confirm_password" placeholder="CONFIRMAR LA CONTRASEÑA">
                        </div>


                        <div class="col-12 text-center mt-1">
                            <button type="submit" class="btn btn-principal mb-1 col-md-5 col-7 py-2">INGRESAR</button>
                            <div class="text-center mb-1">
                                <p>¿Ya Tienes Una Cuenta? <a href="/ingreso">Iniciar Sesión</a></p>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>